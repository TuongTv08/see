<body onload="find_update()">

  <div class="container contentBox">
    <header>
      <a href="/admin"><img src = "../image/logo.png" style ="margin-top: 30px;"> </a>


      <div class="container contentBox">
        <div class="clear"></div>
    </header>

    <center>
      <span id="update">
          <form method="POST" action="adminUpdateProduct">
            <center>
              <input type="text" id="id" name="ID" value="<%= updateProduct.ID%>"  style="width:60%" readonly = "on"/>
              <input type="text" id="type" name="type" value="<%= updateProduct.type%>" style="width:60%" readonly = "on"/>
              <input type="text" id="name" name="name" value="<%= updateProduct.name%>" style="width:60%" required/>
              <input type="text" id="info" name="info" value="<%= updateProduct.info%>" style="width:60%" required/>
              <input type="text" id="price" name="price" value="<%= updateProduct.price%>" style="width:60%" required/>
              <input type="text" id="link" name="link" value="<%= updateProduct.link%>" style="width:60%" required/>

              <br>
              <button type="submit" class="button btn-primary" style="width:30%"><i class="fa fa-edit"> </i> </button>

            </center>
          </form>
            <a href = "removeProduct?ID=<%=updateProduct.ID%>">
              <button class = "button btn-primary" style = "width:7%; float:right; margin-top:-550px; background-color:red" ><i class = "fa fa-times"></i> </button>
            </a>
        </span>
    </center>
